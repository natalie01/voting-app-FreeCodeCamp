doctype html
html
	head
		title Node App
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(http-equiv='x-ua-compatible', content='ie=edge')
		link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
		link(rel="stylesheet",href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
		link(rel="stylesheet",href="/styles.css")
	body
		nav.navbar.navbar-inverse.myNav
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Voting App
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-left
						li
							a(href='/') Home
						if user
							li
								a(href='/polls/add') Add Poll
					ul.nav.navbar-nav.navbar-right
						if user
							li
								a(href='/users/profile') hello, #{user.local.name || user.facebook.name || user.twitter.username}
							li
								a(href='/users/logout') Logout
						if !user
							li
								a(href='/users/register') Register
							li
								a(href='/users/login') Signin
				// /.nav-collapse
		.container
			!= messages('message',locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
  
			block content
			br
			hr
			footer
		script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js")
		script(src="/main.js")
		script(src="/results.js")
